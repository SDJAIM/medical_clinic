<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categories -->
    <record id="module_category_medical_clinic" model="ir.module.category">
        <field name="name">Medical Clinic</field>
        <field name="sequence">10</field>
    </record>
    
    <!-- Groups -->
    <record id="group_clinic_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_medical_clinic"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_clinic_receptionist" model="res.groups">
        <field name="name">Receptionist</field>
        <field name="category_id" ref="module_category_medical_clinic"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_user'))]"/>
    </record>
    
    <record id="group_clinic_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="module_category_medical_clinic"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_receptionist'))]"/>
    </record>
    
    <record id="group_clinic_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_medical_clinic"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_nurse'))]"/>
    </record>
    
    <record id="group_clinic_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_medical_clinic"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_doctor'))]"/>
    </record>
    
    <!-- Record Rules -->
    <record id="clinic_patient_company_rule" model="ir.rule">
        <field name="name">Patient: Multi-company</field>
        <field name="model_id" ref="model_clinic_patient"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_appointment_company_rule" model="ir.rule">
        <field name="name">Appointment: Multi-company</field>
        <field name="model_id" ref="model_clinic_appointment"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_treatment_company_rule" model="ir.rule">
        <field name="name">Treatment: Multi-company</field>
        <field name="model_id" ref="model_clinic_treatment"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_service_company_rule" model="ir.rule">
        <field name="name">Service: Multi-company</field>
        <field name="model_id" ref="model_clinic_service"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_insurance_company_rule" model="ir.rule">
        <field name="name">Insurance: Multi-company</field>
        <field name="model_id" ref="model_clinic_insurance"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_insurance_claim_company_rule" model="ir.rule">
        <field name="name">Insurance Claim: Multi-company</field>
        <field name="model_id" ref="model_clinic_insurance_claim"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="clinic_dental_chart_company_rule" model="ir.rule">
        <field name="name">Dental Chart: Multi-company</field>
        <field name="model_id" ref="model_clinic_dental_chart"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
    <!-- Doctor can only see their own appointments and treatments -->
    <record id="clinic_appointment_doctor_rule" model="ir.rule">
        <field name="name">Appointment: Own doctor</field>
        <field name="model_id" ref="model_clinic_appointment"/>
        <field name="domain_force">['|', ('doctor_id.user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="clinic_treatment_doctor_rule" model="ir.rule">
        <field name="name">Treatment: Own doctor</field>
        <field name="model_id" ref="model_clinic_treatment"/>
        <field name="domain_force">['|', ('doctor_id.user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_clinic_doctor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
