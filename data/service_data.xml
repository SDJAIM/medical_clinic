<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- General Medical Services -->
    <record id="service_consultation" model="clinic.service">
        <field name="name">General Consultation</field>
        <field name="code">GEN-001</field>
        <field name="department">general</field>
        <field name="price">100.00</field>
        <field name="duration">0.5</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <record id="service_followup" model="clinic.service">
        <field name="name">Follow-up Consultation</field>
        <field name="code">GEN-002</field>
        <field name="department">general</field>
        <field name="price">75.00</field>
        <field name="duration">0.25</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <record id="service_emergency" model="clinic.service">
        <field name="name">Emergency Consultation</field>
        <field name="code">GEN-003</field>
        <field name="department">general</field>
        <field name="price">200.00</field>
        <field name="duration">1.0</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <!-- Lab Services -->
    <record id="service_blood_test" model="clinic.service">
        <field name="name">Complete Blood Count</field>
        <field name="code">LAB-001</field>
        <field name="department">laboratory</field>
        <field name="price">50.00</field>
        <field name="duration">0.25</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <record id="service_urine_test" model="clinic.service">
        <field name="name">Urinalysis</field>
        <field name="code">LAB-002</field>
        <field name="department">laboratory</field>
        <field name="price">30.00</field>
        <field name="duration">0.25</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <!-- Radiology Services -->
    <record id="service_xray" model="clinic.service">
        <field name="name">X-Ray</field>
        <field name="code">RAD-001</field>
        <field name="department">radiology</field>
        <field name="price">150.00</field>
        <field name="duration">0.5</field>
        <field name="is_procedure" eval="True"/>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <record id="service_mri" model="clinic.service">
        <field name="name">MRI Scan</field>
        <field name="code">RAD-002</field>
        <field name="department">radiology</field>
        <field name="price">1500.00</field>
        <field name="duration">1.0</field>
        <field name="is_procedure" eval="True"/>
        <field name="preparation_instructions">No metal objects. Inform if claustrophobic.</field>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
    
    <record id="service_ultrasound" model="clinic.service">
        <field name="name">Ultrasound</field>
        <field name="code">RAD-003</field>
        <field name="department">radiology</field>
        <field name="price">200.00</field>
        <field name="duration">0.5</field>
        <field name="is_procedure" eval="True"/>
        <field name="product_id" ref="product.service_order_01"/>
    </record>
</odoo>