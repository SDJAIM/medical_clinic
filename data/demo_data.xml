<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Demo Insurance Companies -->
    <record id="demo_insurance_company_1" model="res.partner">
        <field name="name">Blue Cross Insurance</field>
        <field name="is_company">1</field>
        <field name="is_insurance_company">1</field>
        <field name="street">123 Insurance Ave</field>
        <field name="city">New York</field>
        <field name="phone">+1 555-0100</field>
    </record>
    
    <record id="demo_insurance_company_2" model="res.partner">
        <field name="name">United Healthcare</field>
        <field name="is_company">1</field>
        <field name="is_insurance_company">1</field>
        <field name="street">456 Health St</field>
        <field name="city">Chicago</field>
        <field name="phone">+1 555-0200</field>
    </record>
    
    <!-- Demo Patients -->
    <record id="demo_patient_1" model="clinic.patient">
        <field name="first_name">John</field>
        <field name="last_name">Smith</field>
        <field name="date_of_birth">1985-03-15</field>
        <field name="gender">male</field>
        <field name="blood_group">O+</field>
        <field name="phone">+1 555-1001</field>
        <field name="email">john.smith@example.com</field>
        <field name="street">789 Main St</field>
        <field name="city">Los Angeles</field>
        <field name="allergies">Penicillin</field>
        <field name="chronic_conditions">Hypertension</field>
    </record>
    
    <record id="demo_patient_2" model="clinic.patient">
        <field name="first_name">Sarah</field>
        <field name="last_name">Johnson</field>
        <field name="date_of_birth">1990-07-22</field>
        <field name="gender">female</field>
        <field name="blood_group">A+</field>
        <field name="phone">+1 555-1002</field>
        <field name="email">sarah.johnson@example.com</field>
        <field name="street">321 Oak Ave</field>
        <field name="city">San Francisco</field>
        <field name="allergies">None</field>
    </record>
    
    <record id="demo_patient_3" model="clinic.patient">
        <field name="first_name">Michael</field>
        <field name="last_name">Brown</field>
        <field name="date_of_birth">1978-11-08</field>
        <field name="gender">male</field>
        <field name="blood_group">B+</field>
        <field name="phone">+1 555-1003</field>
        <field name="email">michael.brown@example.com</field>
        <field name="street">654 Pine Rd</field>
        <field name="city">Boston</field>
        <field name="chronic_conditions">Diabetes Type 2</field>
        <field name="current_medications">Metformin 500mg</field>
    </record>
    
    <!-- Demo Doctors (HR Employees) -->
    <record id="demo_doctor_1" model="hr.employee">
        <field name="name">Dr. Emily Davis</field>
        <field name="is_medical_professional">1</field>
        <field name="medical_specialization">general</field>
        <field name="license_number">MD12345</field>
        <field name="work_email">emily.davis@clinic.com</field>
        <field name="work_phone">+1 555-2001</field>
    </record>
    
    <record id="demo_doctor_2" model="hr.employee">
        <field name="name">Dr. Robert Wilson</field>
        <field name="is_medical_professional">1</field>
        <field name="medical_specialization">dentist</field>
        <field name="license_number">DDS67890</field>
        <field name="work_email">robert.wilson@clinic.com</field>
        <field name="work_phone">+1 555-2002</field>
    </record>
    
    <record id="demo_doctor_3" model="hr.employee">
        <field name="name">Dr. Lisa Chen</field>
        <field name="is_medical_professional">1</field>
        <field name="medical_specialization">cardiologist</field>
        <field name="license_number">MD54321</field>
        <field name="work_email">lisa.chen@clinic.com</field>
        <field name="work_phone">+1 555-2003</field>
    </record>
    
    <!-- Demo Insurance Plans -->
    <record id="demo_insurance_1" model="clinic.insurance">
        <field name="patient_id" ref="demo_patient_1"/>
        <field name="insurance_company_id" ref="demo_insurance_company_1"/>
        <field name="policy_number">BC123456789</field>
        <field name="group_number">GRP001</field>
        <field name="plan_name">PPO Gold</field>
        <field name="plan_type">ppo</field>
        <field name="start_date" eval="(datetime.datetime.now() - relativedelta(years=1)).strftime('%Y-%m-%d')"/>
        <field name="coverage_percentage">80</field>
        <field name="deductible">1000</field>
        <field name="max_coverage">100000</field>
        <field name="copay_amount">25</field>
    </record>
    
    <record id="demo_insurance_2" model="clinic.insurance">
        <field name="patient_id" ref="demo_patient_2"/>
        <field name="insurance_company_id" ref="demo_insurance_company_2"/>
        <field name="policy_number">UH987654321</field>
        <field name="plan_name">HMO Silver</field>
        <field name="plan_type">hmo</field>
        <field name="start_date" eval="(datetime.datetime.now() - relativedelta(months=6)).strftime('%Y-%m-%d')"/>
        <field name="coverage_percentage">70</field>
        <field name="deductible">1500</field>
        <field name="max_coverage">75000</field>
        <field name="copay_amount">30</field>
    </record>
    
    <!-- Demo Medicines -->
    <record id="demo_medicine_1" model="product.product">
        <field name="name">Amoxicillin 500mg</field>
        <field name="is_medicine">1</field>
        <field name="list_price">15.00</field>
        <field name="type">product</field>
        <field name="categ_id" ref="medical_clinic.product_category_medicine"/>
    </record>
    
    <record id="demo_medicine_2" model="product.product">
        <field name="name">Ibuprofen 400mg</field>
        <field name="is_medicine">1</field>
        <field name="list_price">8.00</field>
        <field name="type">product</field>
        <field name="categ_id" ref="medical_clinic.product_category_medicine"/>
    </record>
    
    <record id="demo_medicine_3" model="product.product">
        <field name="name">Paracetamol 500mg</field>
        <field name="is_medicine">1</field>
        <field name="list_price">5.00</field>
        <field name="type">product</field>
        <field name="categ_id" ref="medical_clinic.product_category_medicine"/>
    </record>
    
    <!-- Demo Appointments -->
    <record id="demo_appointment_1" model="clinic.appointment">
        <field name="patient_id" ref="demo_patient_1"/>
        <field name="doctor_id" ref="demo_doctor_1"/>
        <field name="date" eval="(datetime.datetime.now() + relativedelta(days=1, hour=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="duration">0.5</field>
        <field name="appointment_type">consultation</field>
        <field name="department">general</field>
        <field name="chief_complaint">Regular checkup and blood pressure monitoring</field>
        <field name="state">confirmed</field>
    </record>
    
    <record id="demo_appointment_2" model="clinic.appointment">
        <field name="patient_id" ref="demo_patient_2"/>
        <field name="doctor_id" ref="demo_doctor_2"/>
        <field name="date" eval="(datetime.datetime.now() + relativedelta(days=2, hour=14)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="duration">1.0</field>
        <field name="appointment_type">dental</field>
        <field name="department">dental</field>
        <field name="chief_complaint">Dental cleaning and examination</field>
        <field name="state">draft</field>
    </record>
    
    <record id="demo_appointment_3" model="clinic.appointment">
        <field name="patient_id" ref="demo_patient_3"/>
        <field name="doctor_id" ref="demo_doctor_3"/>
        <field name="date" eval="(datetime.datetime.now() + relativedelta(days=3, hour=11)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="duration">1.0</field>
        <field name="appointment_type">follow_up</field>
        <field name="department">cardiology</field>
        <field name="chief_complaint">Follow-up for cardiac evaluation</field>
        <field name="state">draft</field>
    </record>
</odoo>
