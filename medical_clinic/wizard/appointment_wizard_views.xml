<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Reschedule Wizard -->
    <record id="view_appointment_reschedule_wizard" model="ir.ui.view">
        <field name="name">clinic.appointment.reschedule.wizard.form</field>
        <field name="model">clinic.appointment.reschedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Reschedule Appointment">
                <group>
                    <field name="appointment_id" invisible="1"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="old_date"/>
                    <field name="new_date"/>
                    <field name="reason" placeholder="Reason for rescheduling..."/>
                    <field name="notify_patient"/>
                </group>
                <footer>
                    <button name="action_reschedule" type="object" string="Reschedule" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Insurance Claim Reject Wizard -->
    <record id="view_insurance_claim_reject_wizard" model="ir.ui.view">
        <field name="name">clinic.insurance.claim.reject.wizard.form</field>
        <field name="model">clinic.insurance.claim.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Insurance Claim">
                <group>
                    <field name="claim_id" invisible="1"/>
                    <field name="rejection_reason" placeholder="Please provide a detailed reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>