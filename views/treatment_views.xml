<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_clinic_treatment_tree" model="ir.ui.view">
        <field name="name">clinic.treatment.tree</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <tree string="Treatments" decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="treatment_code"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="treatment_type"/>
                <field name="chief_complaint"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_clinic_treatment_form" model="ir.ui.view">
        <field name="name">clinic.treatment.form</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <form string="Treatment">
                <header>
                    <button name="action_complete" type="object" string="Complete Treatment" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_print_prescription" type="object" string="Print Prescription" 
                            invisible="state != 'done' or not prescription_ids"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="treatment_code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="appointment_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="treatment_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chief Complaint &amp; History">
                            <group>
                                <field name="chief_complaint" placeholder="Chief complaint..."/>
                                <field name="history_present_illness" placeholder="History of present illness..."/>
                            </group>
                        </page>
                        <page string="Vital Signs">
                            <group>
                                <group>
                                    <label for="blood_pressure_systolic" string="Blood Pressure"/>
                                    <div class="o_row">
                                        <field name="blood_pressure_systolic" placeholder="Systolic" style="width: 80px"/>
                                        <span>/</span>
                                        <field name="blood_pressure_diastolic" placeholder="Diastolic" style="width: 80px"/>
                                        <span>mmHg</span>
                                    </div>
                                    <field name="pulse_rate" widget="integer"/>
                                    <field name="temperature"/>
                                </group>
                                <group>
                                    <field name="respiratory_rate" widget="integer"/>
                                    <field name="weight"/>
                                    <field name="height"/>
                                    <field name="bmi"/>
                                </group>
                            </group>
                        </page>
                        <page string="Examination">
                            <field name="physical_examination" placeholder="Physical examination findings..."/>
                        </page>
                        <page string="Diagnosis">
                            <field name="diagnosis_ids">
                                <tree editable="bottom">
                                    <field name="diagnosis"/>
                                    <field name="icd_code"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                            <field name="diagnosis_notes" placeholder="Additional diagnosis notes..."/>
                        </page>
                        <page string="Treatment Plan">
                            <field name="treatment_plan" placeholder="Treatment plan..."/>
                            <separator string="Procedures Performed"/>
                            <field name="procedure_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Prescription">
                            <field name="prescription_ids">
                                <tree editable="bottom">
                                    <field name="medicine_id"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration" widget="integer"/>
                                    <field name="quantity"/>
                                    <field name="instructions"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lab Tests">
                            <field name="lab_test_ids">
                                <tree>
                                    <field name="test_type"/>
                                    <field name="test_name"/>
                                    <field name="state" widget="badge"/>
                                    <field name="result"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Follow-up">
                            <group>
                                <field name="follow_up_date"/>
                                <field name="follow_up_notes" placeholder="Follow-up instructions..."/>
                            </group>
                        </page>
                        <page string="Documents">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Billing">
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="insurance_claim_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_clinic_treatment_search" model="ir.ui.view">
        <field name="name">clinic.treatment.search</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <search>
                <field name="treatment_code"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="chief_complaint"/>
                <filter name="my_treatments" string="My Treatments" 
                        domain="[('doctor_id.user_id', '=', uid)]"/>
                <separator/>
                <filter name="draft" string="In Progress" domain="[('state', '=', 'draft')]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('date', '>=', context_today()), ('date', '&lt;', context_today() + relativedelta(days=1))]"/>
                <filter name="this_week" string="This Week" domain="[('date', '>=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() - relativedelta(days=context_today().weekday()) + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_by_type" string="Type" context="{'group_by': 'treatment_type'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'date:day'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_clinic_treatment" model="ir.actions.act_window">
        <field name="name">Treatments</field>
        <field name="res_model">clinic.treatment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_clinic_treatment_search"/>
        <field name="context">{'search_default_my_treatments': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No treatments found!
            </p>
            <p>
                Start recording patient treatments, diagnoses, and prescriptions.
            </p>
        </field>
    </record>
</odoo>
