<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Calendar View -->
    <record id="view_clinic_appointment_calendar" model="ir.ui.view">
        <field name="name">clinic.appointment.calendar</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date" date_stop="end_date" 
                     color="doctor_id" mode="month" quick_add="False">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="appointment_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_clinic_appointment_tree" model="ir.ui.view">
        <field name="name">clinic.appointment.tree</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments" decoration-info="state == 'draft'" 
                  decoration-success="state == 'done'" decoration-danger="state == 'cancelled'">
                <field name="appointment_code"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="appointment_type"/>
                <field name="department"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_clinic_appointment_form" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_mark_arrived" type="object" string="Mark Arrived" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_start_consultation" type="object" string="Start Consultation" 
                            class="btn-success" invisible="state != 'arrived'"/>
                    <button name="action_done" type="object" string="Complete" 
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            invisible="state in ['done', 'cancelled']"/>
                    <button name="action_reschedule" type="object" string="Reschedule" 
                            invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,arrived,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="appointment_code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="patient_phone"/>
                            <field name="patient_email"/>
                            <field name="patient_age"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="date"/>
                            <field name="duration" widget="float_time"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="appointment_type"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="service_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information">
                            <group>
                                <field name="chief_complaint" placeholder="Chief complaint..."/>
                                <field name="notes" placeholder="Additional notes..."/>
                                <field name="internal_notes" placeholder="Internal notes (not visible to patient)..." 
                                       groups="medical_clinic.group_clinic_doctor"/>
                            </group>
                        </page>
                        <page string="Related Records">
                            <group>
                                <field name="treatment_id" readonly="1"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_clinic_appointment_search" model="ir.ui.view">
        <field name="name">clinic.appointment.search</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="appointment_code"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <filter name="today" string="Today" 
                        domain="[('date', '>=', context_today()), ('date', '&lt;', context_today() + relativedelta(days=1))]"/>
                <filter name="upcoming" string="Upcoming" 
                        domain="[('date', '>=', context_today())]"/>
                <separator/>
                <filter name="draft" string="Scheduled" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="done" string="Completed" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="my_appointments" string="My Appointments" 
                        domain="[('doctor_id.user_id', '=', uid)]"/>
                <group string="Group By">
                    <filter name="group_by_date" string="Date" context="{'group_by': 'date:day'}"/>
                    <filter name="group_by_doctor" string="Doctor" context="{'group_by': 'doctor_id'}"/>
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_type" string="Type" context="{'group_by': 'appointment_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_clinic_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first appointment!
            </p>
            <p>
                Manage patient appointments, track attendance, and integrate with treatments.
            </p>
        </field>
    </record>
    
    <record id="action_clinic_appointment_calendar" model="ir.actions.act_window">
        <field name="name">Appointment Calendar</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="search_view_id" ref="view_clinic_appointment_search"/>
        <field name="context">{'default_mode': 'month'}</field>
    </record>
</odoo>
