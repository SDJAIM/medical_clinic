<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_clinic_dashboard" model="ir.actions.client">
        <field name="name">Medical Clinic Dashboard</field>
        <field name="tag">medical_clinic.dashboard</field>
    </record>
    
    <!-- Service Tree View -->
    <record id="view_clinic_service_tree" model="ir.ui.view">
        <field name="name">clinic.service.tree</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <tree string="Medical Services">
                <field name="code"/>
                <field name="name"/>
                <field name="department"/>
                <field name="is_procedure" widget="boolean_toggle"/>
                <field name="duration" widget="float_time"/>
                <field name="price" widget="monetary"/>
                <field name="insurance_coverage" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Service Form View -->
    <record id="view_clinic_service_form" model="ir.ui.view">
        <field name="name">clinic.service.form</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <form string="Medical Service">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="department"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="is_procedure"/>
                            <field name="duration" widget="float_time"/>
                            <field name="price" widget="monetary"/>
                            <field name="insurance_coverage"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Service description..."/>
                        <field name="requires_appointment"/>
                        <field name="preparation_instructions" placeholder="Patient preparation instructions..." 
                               invisible="not requires_appointment"/>
                    </group>
                    <group string="Consumables" invisible="not is_procedure">
                        <field name="consumable_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Service Search View -->
    <record id="view_clinic_service_search" model="ir.ui.view">
        <field name="name">clinic.service.search</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <field name="department"/>
                <filter name="procedures" string="Procedures" domain="[('is_procedure', '=', True)]"/>
                <filter name="consultations" string="Consultations" domain="[('is_procedure', '=', False)]"/>
                <separator/>
                <filter name="insurance_covered" string="Insurance Covered" domain="[('insurance_coverage', '=', True)]"/>
                <group string="Group By">
                    <filter name="group_by_department" string="Department" context="{'group_by': 'department'}"/>
                    <filter name="group_by_procedure" string="Is Procedure" context="{'group_by': 'is_procedure'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Service Action -->
    <record id="action_clinic_service" model="ir.actions.act_window">
        <field name="name">Medical Services</field>
        <field name="res_model">clinic.service</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_clinic_service_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first medical service!
            </p>
            <p>
                Define the services and procedures offered by your clinic.
            </p>
        </field>
    </record>
</odoo>
