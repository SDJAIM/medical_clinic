<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_clinic_dashboard" model="ir.actions.act_window">
        <field name="name">Medical Clinic Dashboard</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_clinic_patient_kanban"/>
        <field name="context">{'search_default_active_patients': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to Medical Clinic Management
            </p>
        </field>
    </record>
    
    <!-- Service Views -->
    <record id="view_clinic_service_tree" model="ir.ui.view">
        <field name="name">clinic.service.tree</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <tree string="Medical Services">
                <field name="code"/>
                <field name="name"/>
                <field name="department"/>
                <field name="is_procedure" widget="boolean_toggle"/>
                <field name="price" widget="monetary"/>
                <field name="duration" widget="float_time"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <record id="view_clinic_service_form" model="ir.ui.view">
        <field name="name">clinic.service.form</field>
        <field name="model">clinic.service</field>
        <field name="arch" type="xml">
            <form string="Medical Service">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Service"/>
                        <h1><field name="name" placeholder="Service Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="department"/>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="is_procedure"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary"/>
                            <field name="duration" widget="float_time"/>
                            <field name="insurance_coverage"/>
                            <field name="requires_appointment"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Service description..."/>
                        </page>
                        <page string="Preparation">
                            <field name="preparation_instructions" placeholder="Patient preparation instructions..."/>
                        </page>
                        <page string="Consumables">
                            <field name="consumable_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="qty_available"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_clinic_service" model="ir.actions.act_window">
        <field name="name">Medical Services</field>
        <field name="res_model">clinic.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a medical service
            </p>
            <p>
                Define medical services and procedures offered by the clinic.
            </p>
        </field>
    </record>
</odoo>