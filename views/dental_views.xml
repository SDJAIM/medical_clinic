<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dental Chart Tree View -->
    <record id="view_clinic_dental_chart_tree" model="ir.ui.view">
        <field name="name">clinic.dental.chart.tree</field>
        <field name="model">clinic.dental.chart</field>
        <field name="arch" type="xml">
            <tree string="Dental Charts">
                <field name="patient_id"/>
                <field name="last_update"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    
    <!-- Dental Chart Form View -->
    <record id="view_clinic_dental_chart_form" model="ir.ui.view">
        <field name="name">clinic.dental.chart.form</field>
        <field name="model">clinic.dental.chart</field>
        <field name="arch" type="xml">
            <form string="Dental Chart">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Dental Chart - <field name="patient_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="last_update" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Teeth">
                            <field name="tooth_ids" readonly="1">
                                <tree>
                                    <field name="number"/>
                                    <field name="name"/>
                                    <field name="status" widget="badge"/>
                                    <field name="mesial" widget="boolean_toggle"/>
                                    <field name="distal" widget="boolean_toggle"/>
                                    <field name="occlusal" widget="boolean_toggle"/>
                                    <field name="buccal" widget="boolean_toggle"/>
                                    <field name="lingual" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dental Tooth Form View -->
    <record id="view_clinic_dental_tooth_form" model="ir.ui.view">
        <field name="name">clinic.dental.tooth.form</field>
        <field name="model">clinic.dental.tooth</field>
        <field name="arch" type="xml">
            <form string="Tooth">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="chart_id" readonly="1"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="mesial"/>
                            <field name="distal"/>
                            <field name="occlusal"/>
                            <field name="buccal"/>
                            <field name="lingual"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Procedures">
                            <field name="procedure_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="procedure_type"/>
                                    <field name="doctor_id"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dental Procedure Form View -->
    <record id="view_clinic_dental_procedure_form" model="ir.ui.view">
        <field name="name">clinic.dental.procedure.form</field>
        <field name="model">clinic.dental.procedure</field>
        <field name="arch" type="xml">
            <form string="Dental Procedure">
                <sheet>
                    <group>
                        <group>
                            <field name="tooth_id" readonly="context.get('default_tooth_id')"/>
                            <field name="treatment_id" required="1"/>
                            <field name="date"/>
                            <field name="doctor_id"/>
                        </group>
                        <group>
                            <field name="procedure_type"/>
                            <field name="service_id"/>
                            <field name="surfaces"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search Views -->
    <record id="view_clinic_dental_chart_search" model="ir.ui.view">
        <field name="name">clinic.dental.chart.search</field>
        <field name="model">clinic.dental.chart</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id"/>
                <group string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_clinic_dental_chart" model="ir.actions.act_window">
        <field name="name">Dental Charts</field>
        <field name="res_model">clinic.dental.chart</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_clinic_dental_chart_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No dental charts found!
            </p>
            <p>
                Dental charts are automatically created when a patient has their first dental appointment.
            </p>
        </field>
    </record>
</odoo>
